---
// Components
import { Icon } from "astro-icon/components";
---

<div class="flex flex-col gap-4 items-center mt-8">
  <Icon class="h-80 text-neutral-500 w-64 sm:w-96" name="time-capsule" />
  <h1 class="font-bold mb-4 text-2xl sm:mb-8 sm:text-4xl">Time Capsule</h1>
  <input
    class="bg-transparent border-2 border-neutral-500 outline-none p-2 w-64 sm:w-80"
    id="entry-id-in"
    placeholder="Entry ID"
    type="text"
  />
  <input
    class="bg-transparent border-2 border-neutral-500 outline-none p-2 w-64 sm:w-80"
    id="passwd-in"
    placeholder="Password"
    type="password"
  />
  <button
    class="bg-neutral-500 mt-4 px-2 py-1 rounded-xl enabled:hover:bg-neutral-600 disabled:bg-neutral-700 sm:mt-8"
    id="query-btn">Query</button
  >
</div>
