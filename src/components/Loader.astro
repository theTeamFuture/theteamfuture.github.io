<style is:global>
  @import "tailwindcss";

  #loader {
    @apply bg-blue-500 fixed h-1 hidden left-0 top-0 z-999;
  }
</style>

<script>
  import type { JSAnimation } from "animejs";
  import { animate } from "animejs";

  const el = document.createElement("div");
  el.id = "loader";

  let animation: JSAnimation | null = null;

  document.addEventListener("DOMContentLoaded", () => {
    document.body.prepend(el);
  });

  document.addEventListener("astro:before-preparation", (ev) => {
    // Not show load bar when get assets
    if (ev.to.pathname.startsWith("/assets")) {
      return;
    }

    // Stop old animation
    if (animation !== null) {
      animation.complete();
    }

    // Start new animation
    animation = animate(el, {
      width: ["0%", "90%"],
      duration: 5000,
      ease: "outCubic",
      onBegin: (): void => {
        el.style.display = "block";
        el.style.opacity = "1";
      },
      onComplete: (): void => {
        animation = null;
      },
    });
  });

  document.addEventListener("astro:before-swap", (ev) => {
    ev.newDocument.body.prepend(el);
  });

  document.addEventListener("astro:after-swap", () => {
    // Stop old animation
    if (animation !== null) {
      animation.cancel();
      animation = null;
    }

    // Start new animation
    animation = animate(el, {
      width: {
        to: "100%",
        duration: 500,
      },
      opacity: {
        to: "0",
        duration: 100,
        delay: 500,
      },
      ease: "linear",
      onComplete: (): void => {
        el.style.display = "none";
        animation = null;
      },
    });
  });
</script>
